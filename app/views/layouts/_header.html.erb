<div class="container">
  <div class="row justify-content-center">
    <div class="mt-3">
      <h2>
        <%= link_to root_path, class:"logo", id:"icon" do %>
         <i class="fas fa-utensils fa-flip"></i> Foodie <i class="fas fa-utensils fa-flip"></i>
        <% end %>
      </h2>
    </div>
  </div>

  <div class="row mt-3">
      <nav class="col-12 justify-content-center navbar navbar-expand-lg navbar-light">
        <ul class="d-flex">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to root_path, class:"header-btn" do %>
                <i class="fas fa-home"></i> Top
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to user_path(current_user.id), class:"header-btn" do %>
                <i class="fas fa-circle-user"></i> Mypage
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to shops_path, class:"header-btn" do %>
                <i class="fas fa-shop"></i> Shops
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_shop_path, class:"header-btn" do %>
                <i class="fas fa-plus"></i> New Shop
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class:"header-btn" do %>
                <i class="fas fa-right-from-bracket"></i> Log out
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to new_user_session_path, class:"header-btn" do %>
                <i class="fas fa-home"></i> Log in
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class:"header-btn" do %>
                <i class="fas fa-home"></i> Sign up
              <% end %>
            </li>

          <% end %>
        </ul>
      </nav>
  </div>
  <div class="row mt-1">
    <div class>
      <%= link_to "https://www.google.com/maps?authuser=0", target: :_blank, rel: "noopener noreferrer" do %>Google Map„Å∏<% end %>
    </div>
  </div>


  </div>
</div>